<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Day Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/tvDayShort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MON"
                android:fontFamily="@font/montserrat_extra_bold"
                android:textSize="20sp"
                android:textColor="@color/brown_text"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvScheduleDayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Monday"
                android:textSize="11sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_dialog" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:background="@drawable/divider" />

        <!-- Date and Time Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Date Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_calendar"
                    android:contentDescription="Calendar"
                    app:tint="@color/brown_text" />

                <TextView
                    android:id="@+id/tvScheduleDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="November 17, 2025"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat_extra_bold"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- Time Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_clock"
                    android:contentDescription="Clock"
                    app:tint="@color/brown_text" />

                <TextView
                    android:id="@+id/tvScheduleTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="9:00 AM - 5:00 PM"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat_extra_bold"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
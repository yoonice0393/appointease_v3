<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F1EE"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Close Button -->
        <ImageView
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:layout_gravity="end"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <!-- Title -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPDATE SCHEDULE"
            android:textColor="@color/brown_text"
            android:textSize="22sp"
            android:fontFamily="@font/montserrat_extra_bold"
            android:layout_marginBottom="4dp"/>

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please make sure to fill every fields correctly."
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginBottom="24dp"/>

        <!-- Dynamic Availability Slots Container -->
        <LinearLayout
            android:id="@+id/slotsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"/>

        <!-- Add Button -->
        <ImageView
            android:id="@+id/btnAdd"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_add"
            android:background="@drawable/bg_circle_red"
            android:padding="16dp"
            app:tint="#FFFFFF"
            android:layout_marginHorizontal="8dp" />

        <!-- Confirm Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_semi_bold"
            android:textSize="12sp"
            app:cornerRadius="20dp"
            app:backgroundTint="@color/red_primary"/>
    </LinearLayout>
</ScrollView>